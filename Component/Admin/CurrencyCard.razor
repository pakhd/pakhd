

<a class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true" @onclick="OnClickCallback">
  <img src="@Currency.LogoUrl" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
  <div class="d-flex gap-2 w-100 justify-content-between">
    <div>
      <h6 class="mb-0">@Currency.CurrencyCode</h6>
      <p class="mb-0 opacity-75">@Currency.Name</p>
    </div>
  </div>
</a>

@code {
    [Parameter] public Currency Currency { get; set; }
    [Parameter] public EventCallback OnClickCallback { get; set; }
}
